{
  "metadata": {
    "name": "${APP_USER}"
  },
  "projects": [
    {
      "name": "${APP_USER}",
      "source": {
        "location": "${GIT_CODEBASE_LINK}",
        "type": "git"        
      }
    }
  ],
  "components": [
    {
      "id": "redhat-developer/che-omnisharp-plugin/latest",
      "memoryLimit": "1024Mi",
      "type": "chePlugin",
      "alias": "omnisharp"
    },
    {
      "id": "redhat-developer/netcoredbg-theia-plugin/latest",
      "memoryLimit": "512Mi",
      "type": "chePlugin",
      "alias": "netcoredbg"
    },
    {
      "mountSources": true,
      "endpoints": [
        {
          "name": "5000/tcp",
          "port": 5000
        }
      ],
      "memoryLimit": "512Mi",
      "type": "dockerimage",
      "volumes": [
        {
          "name": "dotnet",
          "containerPath": "/home/user"
        }
      ],
      "alias": "dotnet",
      "image": "mcr.microsoft.com/dotnet/core/runtime:3.1"
    },
    {
      "mountSources": true,
      "endpoints": [
        {
          "name": "${APP_USER_CODE}-db",
          "attributes": {
            "discoverable": "true",
            "public": "false"
          },
          "port": 3306
        }
      ],
      "memoryLimit": "300Mi",
      "type": "dockerimage",
      "alias": "mysql",
      "image": "docker.io/centos/mysql-57-centos7",
      "env": [
        {
          "value": "petclinic",
          "name": "MYSQL_USER"
        },
        {
          "value": "password",
          "name": "MYSQL_PASSWORD"
        },
        {
          "value": "petclinic",
          "name": "MYSQL_DATABASE"
        },
        {
          "value": "$(echo ${0})\\\\$",
          "name": "PS1"
        }
      ]
    }
   ],
  "apiVersion": "1.0.0",
  "commands": [
    {
      "name": "update dependencies",
      "actions": [
        {
          "workdir": "${CHE_PROJECTS_ROOT}/dotnet-web-simple",
          "type": "exec",
          "command": "dotnet restore",
          "component": "dotnet"
        }
      ]
    },
    {
      "name": "run",
      "actions": [
        {
          "workdir": "${CHE_PROJECTS_ROOT}/dotnet-web-simple",
          "type": "exec",
          "command": "dotnet run",
          "component": "dotnet"
        }
      ]
    },
    {
      "name": "build",
      "actions": [
        {
          "workdir": "${CHE_PROJECTS_ROOT}/dotnet-web-simple",
          "type": "exec",
          "command": "dotnet build",
          "component": "dotnet"
        }
      ]
    },
    {
      "name": "Launch .NET Web Application on Debug mode",
      "actions": [
        {
          "referenceContent": "{\n  \"version\": \"0.2.0\",\n    \"configurations\": [\n      {\n          \"type\": \"netcoredbg\",\n          \"request\": \"launch\",\n          \"program\": \"/projects/dotnet-web-simple/bin/Debug/netcoreapp2.2/web.dll\",\n          \"args\": [],\n          \"name\": \".NET Core Launch (console)\",\n          \"stopAtEntry\": false,\n          \"console\": \"internalConsole\"\n      }\n  ]\n}\n",
          "type": "vscode-launch"
        }
      ]
    }
  ]
}